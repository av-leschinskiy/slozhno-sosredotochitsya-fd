{
  "name": "slozhno-sosredotochitsya-fd",
  "version": "1.0.0",
  "main": "index.html",
  "scripts": {
    "lint:css": "stylelint \"styles/**/*.css\" --fix",
    "lint:css:check": "stylelint \"styles/**/*.css\"",
    "format": "prettier --write \"**/*.{html,css,js,json,md}\"",
    "format:check": "prettier --check \"**/*.{html,css,js,json,md}\"",
    "dev": "live-server --port=8080 --open=index.html",
    "serve": "python -m http.server 8080 || php -S localhost:8080",
    "check": "npm run lint:css:check && npm run format:check",
    "fix": "npm run lint:css && npm run format"
  },
  "author": "",
  "devDependencies": {
    "live-server": "^1.2.2",
    "prettier": "^3.6.2",
    "stylelint": "^16.21.1",
    "stylelint-config-standard": "^38.0.0"
  }
}
